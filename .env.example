# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Harvest OAuth Configuration
# Register your OAuth app at: https://id.getharvest.com/oauth2/applications
HARVEST_CLIENT_ID=your_client_id_here
HARVEST_CLIENT_SECRET=your_client_secret_here
HARVEST_REDIRECT_URI=http://localhost:3000/callback

# Security Configuration
# Comma-separated list of allowed origins for CORS/security
ALLOWED_ORIGINS=http://localhost:3000
# Secret for session encryption (generate with: openssl rand -hex 32)
SESSION_SECRET=your_secure_random_string_here
# Session timeout in hours
SESSION_TTL_HOURS=24

# Storage Configuration (for production)
# REDIS_URL=redis://localhost:6379

# Rate Limiting
# Window in milliseconds (default: 15 minutes)
# RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window (default: 1000)
# RATE_LIMIT_MAX=1000

# Logging
LOG_LEVEL=info

# Rates Configuration
# Default cost rate for users without a configured rate (fallback)
# DEFAULT_COST_RATE=0
